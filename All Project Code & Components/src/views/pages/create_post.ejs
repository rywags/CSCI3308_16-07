<%- include ('../partials/head') %>
  <%- include ('../partials/menu') %>

    <main>
      <div class="col"><%- include ('../partials/message') %></div>
      <div class="form-container">
        <h2 style="text-align: center;">
          Create a New Post (all fields are required!)
        </h2>
        <form action="/create_post" method="POST"
          style="display: block; width: 50%; margin: 0 auto; padding-top: 10px;">

          <div class="mb-3">
            <label for="songUrl" class="form-label">Song</label>
            <input type="url" class="form-control" id="songUrl" name="songUrl" placeholder="Spotify song url"
              style="height: 40px;">
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3" placeholder="Description..."
              style="height: 100px;"></textarea>
          </div>

          <div class="col-12">
            <button class="btn btn-primary" type="submit" style="float: right;">Post</button>
          </div>

        </form>
      </div>
    </main>

    <%- include ('../partials/footer') %>