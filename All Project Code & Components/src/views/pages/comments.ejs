<%- include ('../partials/head') %>
    <%- include ('../partials/menu') %>

        <main>
            <div class="col"><%- include ('../partials/message') %></div>
            <div class="container mt-4">
                <div class="d-flex" style="align-items: flex-start;">
                    <!-- post container -->
                    <div class="col-6">
                        <div class="container"
                            style="background-color: whitesmoke; position: relative; max-width: 390px; width: 100%; height: fit-content; padding: 0px; box-shadow: 6px 6px 0px 0px rgba(0, 0, 0); margin-right: 40px;">
                            <div class="col"
                                style="width: 100%; height: fit-content; border-color: black; border-width: 1px; border-style: solid; padding: 12px;">
                                <h2 style="padding-bottom: 4px;">
                                    <%= post.song_name %>
                                </h2>
                                <h2 class="subtitle">
                                    <%= post.artist %>
                                </h2>
                            </div>
                            <div class=" col"
                                style="width: 100%; border-color: black; border-width: 1px; border-style: solid; border-top: 0px; overflow: hidden;">
                                <img src="<%= post.img_url %>" width="100%"></img>
                            </div>
                            <div class="col"
                                style="width: 100%; border-color: black; border-width: 1px; border-style: solid; border-top: 0px; padding: 12px; padding-bottom: 16px;">
                                <div class="d-flex justify-content-between">
                                    <div class="d-flex align-items-center" style="padding-bottom: 12px;">
                                        <img src="<%= post.profile_picture %>" width="32px" height="32px"
                                            style="border-radius: 50%; margin-right: 10px;">
                                        <div class="d-flex flex-column" style="align-items: flex-start;">
                                            <h2>
                                                <%= post.display_name %>
                                            </h2>
                                            <h2 class="subtitle">
                                                @<%= post.username %>
                                            </h2>
                                        </div>

                                    </div>
                                    <div class="like-section">
                                        <span id="like-count-<%= post.post_post_id %>">
                                            <%= post.likes %>
                                        </span>
                                        <span>
                                            Likes
                                        </span>
                                    </div>
                                </div>
                                <div>
                                    <p style="word-wrap: break-word;">
                                        <%= post.description %>
                                    </p>
                                </div>

                            </div>
                            <div style="position: absolute;
                                                right: 12px;
                                                top: 390px;
                                                width: 60px;
                                                height: 60px;">
                                <button onclick="window.location.href='<%= post.song_url %>'"
                                    style="width: 100%; height: 100%; border: none; background: none; padding: 0; display: flex; justify-content: center; align-items: center; position: relative;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="61" height="61" viewBox="0 0 61 61"
                                        fill="none">
                                        <circle cx="30.0828" cy="30.6958" r="29.5" fill="white" stroke="black" />
                                    </svg>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="black"
                                        class="bi bi-play-fill" viewBox="0 0 16 16"
                                        style="z-index: 1; position: absolute; transform: translateX(1px);">
                                        <path
                                            d="m11.596 8.697-6.363 3.692c-.54.313-1.233-.066-1.233-.697V4.308c0-.63.692-1.01 1.233-.696l6.363 3.692a.802.802 0 0 1 0 1.393z" />
                                    </svg>
                                </button>
                            </div>

                        </div>
                    </div>
                    <!-- comment container -->
                    <div class="col-6">
                        <div class="container"
                            style="background-color: whitesmoke; max-width: 390px; width: 100%; max-height: 500px; height: fit-content; overflow-y: auto; padding: 0px; box-shadow: 6px 6px 0px 0px rgba(0, 0, 0); box-sizing: border-box; border: 1px solid black; margin-left: 40px;">
                            <div class="col"
                                style="width: 100%; padding: 12px; padding-bottom: 16px; padding-right: 16px; box-sizing: border-box;">
                                <div class="d-flex" style="padding-bottom: 12px;">
                                    <p style="color: black;">
                                        Comments
                                    </p>
                                </div>
                                <!-- for comment in comments -->
                                <% if (typeof comments !=="undefined" && comments.length!==0) { %>
                                    <% comments.forEach(comment=> { %>
                                        <div>
                                            <div class="d-flex" style="padding-bottom: 12px; align-items: flex-start;">
                                                <img src="<%= comment.profile_picture %>" width="32px" height="32px"
                                                    style="border-radius: 50%; margin-right: 10px;">
                                                <div>
                                                    <div class="d-flex align-items-center">
                                                        <p style="color: black;">
                                                            <%= comment.username %>
                                                        </p>
                                                        <span
                                                            style="line-height: 1.5; margin-left: 4px; align-self: center; padding-top: 4px;">
                                                            â€¢ <%= new Date(comment.created_at).getMonth() + 1 %>-<%= new
                                                                    Date(comment.created_at).getDate() %>-<%= new
                                                                        Date(comment.created_at).getFullYear() %>
                                                        </span>
                                                    </div>

                                                    <p style="word-break: break-all; word-wrap: break-word;">
                                                        <%= comment.comment %>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                            <% } else { %>
                                                <div>
                                                    <p>
                                                        No comments yet
                                                    </p>
                                                </div>
                                                <% } %>
                            </div>
                        </div>
                        <div class="form-container"
                            style="background-color: whitesmoke; max-width: 390px; width: 100%; height: fit-content; padding: 0px; margin-top: 24px; box-shadow: 6px 6px 0px 0px rgba(0, 0, 0); margin-left: 40px;">
                            <div class="col"
                                style="width: 100%; border-color: black; border-width: 1px; border-style: solid; padding: 12px;">
                                <form action="" method="post" style="margin: 0;">
                                    <div class="d-flex justify-content-between"
                                        style="padding-bottom: 12px; align-items: flex-start;">

                                        <textarea name="comment"
                                            oninput="this.style.height = ''; this.style.height = this.scrollHeight + 'px'"
                                            style="width: 100%; background: none; border: none; resize: none; overflow: hidden; margin-right: 12px; outline: none"
                                            placeholder="Add a comment..." autocomplete="off" required></textarea>

                                        <script>
                                            // Auto resize textarea on page load
                                            window.addEventListener('DOMContentLoaded', (event) => {
                                                document.querySelectorAll('textarea').forEach(textarea => {
                                                    textarea.style.height = '';
                                                    textarea.style.height = textarea.scrollHeight + 'px';
                                                });
                                            });
                                        </script>
                                        <button class="post-button" type="submit"
                                            style="background: none; border: none;">
                                            Post
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <%- include ('../partials/footer') %>